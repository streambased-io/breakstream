{
  "generators": [
    {
      "topic": "customers",
      "value": {
        "CustomerID": {
          "_gen": "string",
          "expr": "#{Number.numberBetween '100','500000'}"
        },
        "Name": {
          "_gen": "string",
          "expr": "#{Name.full_name}"
        },
        "Address": {
          "_gen": "string",
          "expr": "#{Address.full_address}"
        },
        "Email": {
          "_gen": "string",
          "expr": "#{Internet.email_address}"
        },
        "PhoneNo": {
          "_gen": "string",
          "expr": "#{PhoneNumber.phone_number}"
        }
      },
      "localConfigs": {
        "events": {
          "exactly": 1000000
        }
      }
    },
    {
      "topic": "branches",
      "value": {
        "BranchID": {
          "_gen": "sequentialInteger",
          "startingFrom": 100
        },
        "BranchName": {
          "_gen": "string",
          "expr": "#{Company.name}"
        },
        "Address": {
          "_gen": "string",
          "expr": "#{Address.full_address}"
        },
        "PhoneNo": {
          "_gen": "string",
          "expr": "#{PhoneNumber.phone_number}"
        }
      },
      "localConfigs": {
        "events": {
          "exactly": 30
        }
      }
    },
    {
      "topic": "transactions",
      "vars": {
        "TransactionType": {
          "_gen": "oneOf",
          "choices": [
            "Deposit",
            "Withdrawal"
          ]
        }
      },
      "value": {
        "TransactionID": {
          "_gen": "uuid",
          "var": "TransactionID"
        },
        "AccountID": {
          "_gen": "uniformDistribution",
          "bounds": [
            0,
            10000
          ],
          "decimals": 0
        },
        "TransactionType": {
          "_gen": "var",
          "var": "TransactionType"
        },
        "TransactionAmount": {
          "_gen": "uniformDistribution",
          "bounds": [
            100,
            10000
          ],
          "decimals": 2
        },
        "BranchID": {
          "_gen": "uniformDistribution",
          "bounds": [
            100,
            130
          ],
          "decimals": 0
        },
        "CustomerFlaggedFraud": {
          "_gen": "weightedOneOf",
          "choices": [
            {
              "weight": 1,
              "value": true
            },
            {
              "weight": 9,
              "value": false
            }
          ]
        },
        "TransactionTime": {
          "_gen": "sequentialInteger",
          "startingFrom": 1603452886000000,
          "advanceBy": 315540000
        }
      },
      "localConfigs": {
        "events": {
          "exactly": 500000
        },
        "avroSchemaHint": {
          "value": {
            "type": "record",
            "name": "transactionsValue",
            "fields": [
              {
                "name": "TransactionID",
                "type": "string"
              },
              {
                "name": "AccountID",
                "type": "long"
              },
              {
                "name": "TransactionType",
                "type": "string"
              },
              {
                "name": "TransactionAmount",
                "type": "double"
              },
              {
                "name": "BranchID",
                "type": "long"
              },
              {
                "name": "CustomerFlaggedFraud",
                "type": "boolean"
              },
              {
                "name": "TransactionTime",
                "type": {
                  "type": "long",
                  "logicalType": "timestamp-micros"
                }
              }
            ]
          }
        }
      }
    }
  ],
  "connections": {
    "kafka": {
      "kind": "kafka",
      "producerConfigs": {
        "bootstrap.servers": "kafka1:9092",
        "key.serializer": "io.confluent.kafka.serializers.KafkaAvroSerializer",
        "value.serializer": "io.confluent.kafka.serializers.KafkaAvroSerializer",
        "schema.registry.url": "http://schema-registry:8081"
      }
    }
  }
}